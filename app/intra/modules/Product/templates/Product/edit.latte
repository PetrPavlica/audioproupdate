<script type="text/javascript">
    //reinicializing all autocompletes after ajax
    $(function () {
        $.ajaxSetup({
            complete: function (xhr, textStatus) {
                $(".ckEditor").ckeditor();
                printGraf();
                $('#operationTable').DataTable();
            }
        });
    });


</script>

<script type="text/javascript">

    $(document).ready(function () {
        printGraf();
        $('#operationTable').DataTable();

        $(document).find('input[data-toggle="completer"]').completer();
        $(document).find('input[data-toggle="completer"]').completer('place');
    });

    $('.nav-tabs li a').on('click', function (event) {

        var id = $(this).attr('href');
        setTimeout(function () {
            $(document).find(id).find('.ct-chart').each(function (i, e) {
                e.__chartist__.update();
            });

        }, 500);

        setTimeout(function () {

            console.log("completer");
            $(document).find(id).find('input[data-toggle="completerr"]').completer();
            $(document).find(id).find('input[data-toggle="completerr"]').completer('place');

        }, 2000);

    });

    $(document).ajaxComplete(function() {
        $(document).find('input[data-toggle="completer"]').completer();
        $(document).find('input[data-toggle="completer"]').completer('place');
        $(document).find('input[data-toggle="completerr"]').completer();
        $(document).find('input[data-toggle="completerr"]').completer('place');
    });

</script>

