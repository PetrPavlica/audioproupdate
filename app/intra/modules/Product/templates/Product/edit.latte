{block title}{_'Editace produktu'}{/block}

{block content}

<h3 class="page-header">
    {_'Editace produktu'}
</h3>

<link rel="stylesheet" type="text/css" href="{$basePath}/core/css/dataTableBootstrap.css"/>
<div class="row">
<div style="" class="col-xs-12 col-sm-12 col-md-12">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">{_'Základní informace'}</a></li>
        <li><a data-toggle="tab" href="#category">{_'Kategorie'}</a></li>
        <li><a data-toggle="tab" href="#action">{_'Cenotvorba'}</a></li>
        <li><a data-toggle="tab" href="#stockk" id="stockTab">{_'Sklad'}</a></li>
        <li><a data-toggle="tab" href="#text">{_'Texty v eshopu'}</a></li>
        <li><a data-toggle="tab" href="#specifications">{_'Specifikace'}</a></li>
        <li><a data-toggle="tab" href="#foto">{_'Fotogalerie'}</a></li>
        {*<li><a data-toggle="tab" href="#parameters">{_'Parametry'}</a></li>
        <li><a data-toggle="tab" href="#filter">{_'Filtry'}</a></li>
        <li><a data-toggle="tab" href="#accessories">{_'Příslušenství'}</a></li>
        <li><a data-toggle="tab" href="#package">{_'Balíčky'}</a></li>
        <li><a data-toggle="tab" href="#product_sets">{_'Specifikace sady'}</a></li>*}
        <li><a data-toggle="tab" href="#color_variants">{_'Barevné varianty'}</a></li>
        {*<li><a data-toggle="tab" href="#alternatives">{_'Alternativa'}</a></li>
        <li><a data-toggle="tab" href="#gifts">{_'Dárky'}</a></li>*}
        <li><a data-toggle="tab" href="#articles">{_'Články'}</a></li>
    </ul>

    {snippetArea product}
        {form form}
            <button name="send" type="submit" style="display: none;">{_'Uložit'}</button>
            <div class="tab-content">
                <div id="home" class="tab-pane active in fade">
                    <div class="panel-body">
                        <fieldset class="form-horizontal">
                            {input id}
                            <legend>
                                <small>{_'Základní informace'}</small>
                            </legend>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'name'}
                                    {control renderer $form, 'code'}
                                    {control renderer $form, 'plu'}
                                    {control renderer $form, 'ean'}
                                    {control renderer $form, 'productMark'}
                                    {control renderer $form, 'colorText'}
                                    {control renderer $form, 'color'}
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'unit'}
                                    {control renderer $form, 'selingPrice'}
                                    {control renderer $form, 'type'}
                                    {control renderer $form, 'vat'}
                                    {control renderer $form, 'lastPrice'}
                                    {control renderer $form, 'count'}
                                    {control renderer $form, 'countOfSell'}
                                    {control renderer $form, 'totalRating'}
                                    {control renderer $form, 'sumRating'}

                                </div>
                            </div>
                            <legend>
                                <small>{_'Sklad'}</small>
                            </legend>
                            <div class="row">
                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'count'}
                                    {control renderer $form, 'rezerveCount'}
                                </div>
                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'minCount'}
                                    {control renderer $form, 'maxCount'}
                                    {control renderer $form, 'stockText'}
                                </div>
                            </div>
                            <legend>
                                <small>{_'Ostatní (tagy, filtry, řazení)'}</small>
                            </legend>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'active'}
                                    {control renderer $form, 'saleTerminated'}
                                    {control renderer $form, 'isTop'}
                                    {control renderer $form, 'isNews'}
                                    {control renderer $form, 'notInFeeds'}
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'audioProMultiroom'}
                                    {control renderer $form, 'batteryPowered'}
                                    {control renderer $form, 'chromecast'}
                                    {control renderer $form, 'ipx4'}
                                    {control renderer $form, 'bt4'}
                                    {control renderer $form, 'bt5'}
                                    {control renderer $form, 'heyGoogle'}
                                    {control renderer $form, 'airPlay'}
                                    {*control renderer $form, 'isRecomanded'}
                                    {control renderer $form, 'orderIdRecomanded'}
                                    {control renderer $form, 'onFront'}
                                    {control renderer $form, 'orderOnFront'}
                                    {control renderer $form, 'ourSortingMostSold'}
                                    {control renderer $form, 'countOfSellForSearch'}
                                    {control renderer $form, 'newichProductRef', 'getProducts', '', ''}
                                    {control renderer $form, 'installSettingAdd'}
                                    {control renderer $form, 'priceInstallSettingAdd'*}
                                </div>
                            </div>


                            {*<legend>
                                <small>{_'Lepší produkt'}</small>
                            </legend>
                            <div class="row">
                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'betterProduct', 'getProducts', '', ''}
                                </div>
                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'betterProductAdvantages'}
                                </div>
                            </div>*}


                            <legend>
                                <small>{_'SEO'}</small>
                            </legend>
                            <div class="row">
                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'seoTitle'}
                                </div>
                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'seoDescription'}
                                </div>
                            </div>
                            <legend>
                                <small>{_'CPC'}</small>
                            </legend>
                            <div class="row">
                                <div style="" class="col-xs-12 col-sm-12 col-md-12">
                                    {control renderer $form, 'zboziCPC'}
                                    {control renderer $form, 'zboziSearchCPC'}
                                    {control renderer $form, 'heurekaCPC'}
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div id="category" class="tab-pane fade">
                    <div class="row">
                        <div style="" class="col-xs-12 col-sm-12 col-md-12">
                            <br><br>
                            {ifset $product}
                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    {control renderer $form, 'categoriesEshop'}
                                </div>

                                <div style="" class="col-xs-12 col-sm-12 col-md-6">
                                    <button name="addCategory" type="submit" class="btn btn-primary ajax">
                                        <i class="fa fa-plus"></i> Přidat kategorii
                                    </button>
                                </div>
                            {else}
                                <span style="display:none">{control renderer $form, 'categoriesEshop'}</span>
                                Kategorie lze přidávat až pokud je produkt poprvé uložen.<br/><br/>
                            {/ifset}
                        </div>
                    </div>
                    {snippet eshop-category}
                        {ifset $productEshopCategory}
                            {if count($productEshopCategory)}
                                <div style="padding-top: 20px" class="col-xs-12 col-sm-12 col-md-12">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Název</th>
                                                <th>Nadřazená kategorie</th>
                                                <th>Akce</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {foreach $productEshopCategory as $category}
                                                <tr>
                                                    <td>{$iterator->getCounter()}</td>
                                                    <td>{ifset $category->category->name}{$category->category->name}{/ifset}</td>
                                                    <td>
                                                        {ifset $category->category->parentCategory->name}
                                                            {$category->category->parentCategory->name}
                                                        {else}
                                                            -
                                                        {/ifset}
                                                    </td>
                                                    <td>
                                                        {ifset $category->category->id}<a n:href=":ProductCategory:edit id=>$category->category->id" class="btn btn-sm btn-default" target="_blank"><i class="fa fa-eye"></i></a>{/ifset}
                                                        <a n:href="deleteCategory! idCategory=>$category->id" class="fa fa-trash btn btn-danger"
                                                                                                                   data-confirm="modal"
                                                                                                                   data-ajax="on"></a>
                                                    </td>
                                                </tr>
                                            {/foreach}
                                        </tbody>
                                    </table>
                                </div>
                            {/if}
                        {/ifset}
                    {/snippet}
                </div>

                <div id="action" class="tab-pane fade">
                    <div class="panel-body">
                        {snippet action-products}
                            {*<div style="" class="col-xs-12 col-sm-12 col-md-12">
                                <br>
                                <legend>
                                    <small>{_'Ceny produktu'}</small>
                                </legend>
                                {if isset($product)}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a n:href="Product:editPrice id=>0, productId => $product->id"><i class="fa fa-plus"></i> {_'Přidat novou cenu'}
                                            </a>
                                            <br/><br/>
                                            <div class="table-responsive">
                                                <table id="operationTable" class="table table-bordered table-stripped">
                                                    <thead>
                                                    <tr>
                                                        <th class="text-left">
                                                            #
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Cena'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Cena před slevou'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Aktivní'}
                                                        </th>
                                                        <th class="text-left">
                                                            {_'Akce'}
                                                        </th>
                                                    </thead>
                                                    <tbody>
                                                    {foreach $prices as $action}
                                                        <tr>
                                                            <td>
                                                                {$iterator->getCounter()}
                                                            </td>
                                                            <td>
                                                                {$action->currency->markBefore}
                                                                {$action->selingPrice}
                                                                {$action->currency->markBehind}
                                                            </td>
                                                            <td>
                                                                {$action->currency->markBefore}
                                                                {$action->lastPrice}
                                                                {$action->currency->markBehind}
                                                            </td>
                                                            <td>
                                                                {if $action->active}
                                                                    <i class="fa fa-check"></i>
                                                                {else}
                                                                    <i class="fa fa-times"></i>
                                                                {/if}
                                                            </td>
                                                            <td>
                                                                <a n:href="Product:editPrice id => $action->id, productId => $product->id" class="fa fa-edit"></a>
                                                                &nbsp;|&nbsp;
                                                                <a n:href="deleteAction! actionId => $action->id" class="fa fa-trash" data-confirm="modal" data-ajax="on"></a>
                                                            </td>
                                                        </tr>
                                                    {/foreach}

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                {/if}
                            </div>*}
                            <div style="" class="col-xs-12 col-sm-12 col-md-12">
                                <br>
                                <legend>
                                    <small>{_'Akce produktu'}</small>
                                </legend>
                                {if isset($product)}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a n:href="Product:editAction id=>0, productId => $product->id" ><i class="fa fa-plus"></i> {_'Přidat novou akci'}
                                            </a>
                                            <br/><br/>
                                            <div class="table-responsive">
                                                <table id="operationTable" class="table table-bordered table-stripped">
                                                    <thead>
                                                    <tr>
                                                        <th class="text-left">
                                                            #
                                                        </th>
                                                        <th class="text-left">
                                                            {_'Sleva %'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Cena'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Cena před slevou'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Datum od'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Datum do'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Srovnávač'}
                                                        </th>
                                                        <th class="text-center">
                                                            {_'Aktivní'}
                                                        </th>
                                                        <th class="text-left">
                                                            {_'Akce'}
                                                        </th>
                                                    </thead>
                                                    <tbody>
                                                    {foreach $actions as $action}
                                                        <tr>
                                                            <td>
                                                                {$iterator->getCounter()}
                                                            </td>
                                                            <td>
                                                                {$action->percent} %
                                                            </td>
                                                            <td>
                                                                {$action->currency->markBefore}
                                                                {$action->selingPrice}
                                                                {$action->currency->markBehind}
                                                            </td>
                                                            <td>
                                                                {$action->currency->markBefore}
                                                                {$action->lastPrice}
                                                                {$action->currency->markBehind}
                                                            </td>
                                                            <td>
                                                                {$action->dateForm|date:'j. n. Y H:i'}
                                                            </td>
                                                            <td>
                                                                {$action->dateTo|date:'j. n. Y H:i'}
                                                            </td>
                                                            <td>
                                                                {if $action->feedShow}
                                                                    <i class="fa fa-check"></i>
                                                                {else}
                                                                    <i class="fa fa-times"></i>
                                                                {/if}
                                                            </td>
                                                            <td>
                                                                {if $action->active}
                                                                    <i class="fa fa-check"></i>
                                                                {else}
                                                                    <i class="fa fa-times"></i>
                                                                {/if}
                                                            </td>
                                                            <td>
                                                                {if !$action->active}
                                                                    <a n:href="activationAction! actionId => $action->id" class="fa fa-play-circle-o"></a>
                                                                {else}
                                                                    <a n:href="stopAction! actionId => $action->id" class="fa fa-stop-circle-o"></a>
                                                                {/if}
                                                                &nbsp;|&nbsp;
                                                                <a n:href="Product:editAction id => $action->id, productId => $product->id" class="fa fa-edit"></a>
                                                                &nbsp;|&nbsp;
                                                                <a n:href="deleteAction! actionId => $action->id" class="fa fa-trash" data-confirm="modal" data-ajax="on"></a>
                                                            </td>
                                                        </tr>
                                                    {/foreach}

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                {else}
                                    {_'Správa cenotvorby je dostupná až pokud je produkt poprvé uložen.'}<br/><br/>
                                {/if}

                            </div>
                            {*<div style="" class="col-xs-12 col-sm-12 col-md-12">
                                <br>
                                <legend>
                                    <small>{_'Speciální akce produktu'}</small>
                                </legend>
                                {if isset($product)}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a n:href="Product:editSpecial id=>0, productId => $product->id" ><i class="fa fa-plus"></i> {_'Přidat novou speciální akci'}
                                            </a>
                                            <br/><br/>
                                            <div class="table-responsive">
                                                <table id="operationTable" class="table table-bordered table-stripped">
                                                    <thead>
                                                        <tr>
                                                            <th class="text-left">
                                                                #
                                                            </th>
                                                            <th class="text-left">
                                                                {_'Sleva %'}
                                                            </th>
                                                            <th class="text-center">
                                                                {_'Cena'}
                                                            </th>
                                                            <th class="text-center">
                                                                {_'Cena před slevou'}
                                                            </th>
                                                            <th class="text-center">
                                                                {_'Datum od'}
                                                            </th>
                                                            <th class="text-center">
                                                                {_'Datum do'}
                                                            </th>
                                                            <th class="text-center">
                                                                {_'Aktivní'}
                                                            </th>
                                                            <th class="text-left">
                                                                {_'Akce'}
                                                            </th>
                                                    </thead>
                                                    <tbody>
                                                        {foreach $specialActions as $action}
                                                            <tr>
                                                                <td>
                                                                    {$iterator->getCounter()}
                                                                </td>
                                                                <td>
                                                                    {$action->percent} %
                                                                </td>
                                                                <td>
                                                                    {$action->currency->markBefore}
                                                                    {$action->selingPrice}
                                                                    {$action->currency->markBehind}
                                                                </td>
                                                                <td>
                                                                    {$action->currency->markBefore}
                                                                    {$action->lastPrice}
                                                                    {$action->currency->markBehind}
                                                                </td>
                                                                <td>
                                                                    {$action->dateForm|date:'j. n. Y H:i'}
                                                                </td>
                                                                <td>
                                                                    {$action->dateTo|date:'j. n. Y H:i'}
                                                                </td>
                                                                <td>
                                                                    {if $action->active}
                                                                        <i class="fa fa-check"></i>
                                                                    {else}
                                                                        <i class="fa fa-times"></i>
                                                                    {/if}
                                                                </td>
                                                                <td>
                                                                    <a n:href="Product:editSpecial id => $action->id, productId => $product->id" class="fa fa-edit"></a>
                                                                    &nbsp;|&nbsp;
                                                                    <a n:href="deleteAction! actionId => $action->id" class="fa fa-trash" data-confirm="modal" data-ajax="on"></a>
                                                                </td>
                                                            </tr>
                                                        {/foreach}

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                {else}
                                    {_'Správa cenotvorby je dostupná až pokud je produkt poprvé uložen.'}<br/><br/>
                                {/if}

                            </div>*}
                        {/snippet}
                    </div>
                </div>

                <div id="stockk" class="tab-pane fade">
                    <div style="" class="col-xs-12 col-sm-12 col-md-12">
                        {snippet eshop-stock-products}
                            <br>
                            <legend>
                                <small>{_'Sklad'}</small>
                            </legend>
                        {ifset $product}
                            <div class="row">
                                <div class="col-md-6">
                                    <p>{_'Počet kusů na skladu:'} <strong>{$product->count}</strong> <br/></p>
                                    <p>{_'Počet rezervovaných kusů na skladu:'}
                                        <strong>{$product->rezerveCount}</strong> <br/></p>
                                    <p>{_'Poslední pořizovací cena:'} <strong>{$product->lastPurchasePrice}</strong>
                                        <br/><br/><br/></p>
                                </div>
                                <div class="col-md-6">
                                    <p>{_'Minimální zásoba:'} <strong>{$product->minCount}</strong> <br/></p>
                                    <p>{_'Maximální zásoba:'} <strong>{$product->maxCount}</strong> <br/></p>
                                    <p>{_'Průměrná pořizovací cena:'} <strong>{$product->avaragePurchasePrice}</strong>
                                        <br/><br/><br/></p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <fieldset class="form-horizontal">
                                        <legend>
                                            <small>
                                                <small>{_'Přidat zboží na sklad'}</small>
                                            </small>
                                        </legend>
                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">{_'Počet kusů'}</label>
                                            <div class="col-sm-8">
                                                {input 'countAdd'}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">{_'Pořizovací cena/kus'}</label>
                                            <div class="col-sm-8">
                                                {input 'priceAdd'}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">{_'Poznámka'}</label>
                                            <div class="col-sm-8">
                                                {input 'commentAdd'}
                                            </div>
                                        </div>

                                        <div class="col-md-2 col-md-offset-4">
                                            <button name="addStocks" type="submit" class="btn btn-block btn-primary ">
                                                <i class="fa fa-plus"></i></button>
                                        </div>
                                    </fieldset>

                                </div>
                                <div class="col-md-6">
                                    <div style="display: block; position: relative; width: 100%;">
                                        <legend>
                                            <small>
                                                <small>{_'Grafický přehled'}</small>
                                            </small>
                                        </legend>
                                        <div class="ct-chart ct-golden-section" id="chart1"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <legend>
                                        <small>
                                            <small>{_'Pohyby na skladu'}</small>
                                        </small>
                                    </legend>
                                    <div class="table-responsive">
                                        <table id="operationTable" class="table table-bordered table-stripped">
                                            <thead>
                                            <tr>
                                                <th class="text-left">
                                                    #
                                                </th>
                                                <th class="text-left">
                                                    {_'Datum'}
                                                </th>
                                                <th class="text-center">
                                                    {_'Počet'}
                                                </th>
                                                <th class="text-center">
                                                    {_'Cena/kus'}
                                                </th>
                                                <th class="text-center">
                                                    {_'Celkem'}
                                                </th>
                                                <th class="text-center">
                                                    {_'Přidal'}
                                                </th>
                                                <th class="text-center">
                                                    {_'Objednávka/Faktura'}
                                                </th>
                                                <th class="text-center">
                                                    {_'Rezervace?'}
                                                </th>
                                                <th class="text-center">
                                                    {_'Poznámka'}
                                                </th>
                                                <th class="text-left">
                                                    {_'Akce'}
                                                </th>
                                            </thead>
                                            <tbody>
                                            {var $sumCount = $sumPrice = 0}
                                                {if $operations}
                                            {foreach $operations as $oper}
                                                <tr>
                                                    <td>
                                                        {$iterator->getCounter()}
                                                    </td>
                                                    <td>
                                                        {$oper->foundedDate|date:'j. n. Y'}
                                                    </td>
                                                    <td>
                                                        {$oper->count}
                                                        {var $sumCount = $sumCount + $oper->count}
                                                    </td>
                                                    <td>
                                                        {$oper->price|number:2:',':' '}
                                                    </td>
                                                    <td>
                                                        {$oper->sumPrice|number:2:',':' '}
                                                        {var $sumPrice = $sumPrice + $oper->sumPrice}
                                                    </td>
                                                    <td>
                                                        {if $oper->originator}
                                                            {$oper->originator->name}
                                                        {/if}
                                                    </td>
                                                    <td>
                                                        {if $oper->orders}
                                                            <a n:href=":Order:view id => $oper->orders->id">
                                                                {if $oper->orders->codeInvoice}
                                                                    {$oper->orders->codeInvoice}
                                                                {else}
                                                                    {$oper->orders->variableSymbol}
                                                                {/if}
                                                            </a>
                                                        {/if}
                                                    </td>
                                                    <td>
                                                        {if  $oper->isReservation}
                                                            <i class="fa fa-check"></i>
                                                        {/if}
                                                    </td>
                                                    <td>
